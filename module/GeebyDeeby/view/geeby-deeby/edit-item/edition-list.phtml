        </td>
        <td align="center">
          <input type="radio" class="selectedEdition" name="selectedEdition" value="<?=$current['Edition_ID']?>" />
        </td>
        <td>
          <a href="<?=$this->url('edit/edition', array('id' => $current['Edition_ID']))?>"><?=$this->escapeHtml($current['Edition_Name'])?></a>
        </td>
        <td>
          <? $parts = array_filter([$current['Earliest_Year'], $current['Extent_In_Parent']]); ?>
          <?=$this->escapeHtml(implode(', ', $parts))?>
        </td>
      </tr>
    <? endforeach; ?>
  </table>
