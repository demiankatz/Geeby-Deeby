<? if (!isset($editions) || count($editions) == 0): ?>
  No editions.
<? else: ?>
  <table class="list_item">
    <tr><th>Display Order within Item</th><th><button onclick="return Item.copyEdition();">Copy Selected Edition</button></th><th>Title</th><th>Details</th></tr>
    <? foreach ($editions as $current): ?>
      <tr>
        <td>
          <input class="number" type="text" value="<?=isset($current['Item_Display_Order']) ? $this->escapeHtml($current['Item_Display_Order']) : 0 ?>" id="order<?=$current['Edition_ID']?>" />
