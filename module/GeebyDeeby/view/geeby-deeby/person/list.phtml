<?
    $this->layout()->title = ($bioMode ? 'Biography' : 'Person') . ' List';
?>
<? if (count($people) < 1): ?>
  <p>No <?=$bioMode ? 'biographies' : 'people'?> listed in this database yet.</p>
<? else: ?>
  <? $currentLetter = false; foreach ($people as $current): ?>
    <? $first = $this->firstletter($current['Last_Name']); if ($currentLetter !== $first): $currentLetter = $first; ?>
      <h2><?=$this->escapeHtml($currentLetter)?></h2>
