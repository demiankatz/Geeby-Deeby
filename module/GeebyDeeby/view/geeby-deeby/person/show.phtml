    <? $i = 0; foreach ($pseudonyms as $pseudonym): $i++; ?>
      <a href="<?=$this->url('person', array('id' => $pseudonym['Person_ID']))?>"><?=$this->showperson($pseudonym)?></a><?=$i < $pseudoCount ? '; ' : ''?>
