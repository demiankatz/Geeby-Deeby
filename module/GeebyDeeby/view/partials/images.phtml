<? if (count($images) > 0): ?>
  <? foreach ($images as $image): ?>
    <?
      if (!isset($linkType) || $linkType == 'image') {
        $openAnchor = '<a target="_new" href="' . $this->escapeHtml($image['Image_Path']) . '">';
      } else if ($linkType == 'item') {
        $openAnchor = '<a href="' . $this->url('item', array('id' => $image['Item_ID'])) . '">';
      } else {
        // unsupported option:
        $openAnchor = '<a>';
      }
    ?>
    <table class="image">
      <tr><td align="center"><?=$openAnchor?><img src="<?=$this->escapeHtml($image['Thumb_Path'])?>" /></a></td></tr>
      <?
        $note = '';
        if (isset($editions) && count($editions) > 1) {
            $note = $this->fixtitle($image['Edition_Name']);
        }
        if (!empty($image['Note'])) {
            if (!empty($note)) {
                $note .= ' - ';
            }
            $note .= $image['Note'];
        }
      ?>
      <tr><td align="center"><?=!empty($note) ? '(' . $this->escapeHtml($note) . ')' : '<br />'?></td></tr>
    </table>
  <? endforeach; ?>
  <div style="clear: left;"><!-- empty --></div>
<? endif; ?>
